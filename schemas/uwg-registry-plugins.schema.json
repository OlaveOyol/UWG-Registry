{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://uwg.example/schemas/uwg-registry-plugins.schema.json",
  "title": "UWG Registry Game Plugins",
  "type": "object",
  "additionalProperties": false,
  "required": ["gameId", "plugins"],
  "properties": {
    "gameId": { "type": "string", "minLength": 3 },
    "plugins": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["pluginId", "version", "style", "assetUrl", "sha256", "uwgApi"],
        "properties": {
          "pluginId": { "type": "string", "pattern": "^[a-z0-9._-]{3,64}$" },
          "version": { "type": "string" },
          "style": { "type": "string", "enum": ["vn", "sandbox", "hybrid"] },
          "assetUrl": { "type": "string", "minLength": 10 },
          "sha256": { "type": "string", "pattern": "^[A-Fa-f0-9]{64}$" },
          "uwgApi": { "type": "string" },
          "renpyMin": { "type": "string" },
          "renpyMax": { "type": "string" }
        }
      }
    }
  }
}

